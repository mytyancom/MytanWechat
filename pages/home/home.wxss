/* pages/home/home.wxss */
/* header */
.head{
  display: flex;
flex-direction: row;
text-align: center;
}
.headlogo{
margin-left: 10px;
margin-top: 10px;
}
.follow{
float: left;
margin-top: 10px;
}
/* banner */

swiper {
    height: 400px;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 250px;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}
/* footer */

.foot{
 display: flex;
  background-color: #ccc;
flex-direction: row;
}
.footer{
 display: flex;
  width: 50%;
  flex-direction: row;
  margin-left: 10px;
  margin-top: 10px;

}
.footlist{
  width: 25%;
  margin-top: 30px;
  text-align: center;

}
.bq{

text-align: center;

}
.footertext{
font-size: 10px;
  text-align: center;
}
.footerimg{
  display: flex;
 
  flex-direction: row;
}

/* middle */
.me{
margin-top: 80px;

flex-direction: row;

}


.first_card {
  z-index: 999;
  margin: 20px;
  margin-top: -55px;
  min-height: 100px;
  background-color: #FFFFFF;
  border-radius: 10px;
  box-shadow: 0px 5px 20px -5px #DDD;
}
.first_title_box {
  height: 100px;
  background-color: #FFF;
  border-bottom: 1px dashed #EEE;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0px 20px;
  border-radius: 10px 10px 0px 0px;
  vertical-align: middle
  
}
.first_title_box > text {
  font-size: 16px;
  font-weight: 300;
}
.first_title_box > image{
  margin-left: 33%;
}

.first_content_box {
  padding: 10px 20px;
  background-color: #FFF;
  border-radius: 0px 0px 10px 10px;
  text-align: center;
}
.first_content_box > text {
  font-size: 20px;
  line-height: 20px;
  color: #333;
  font-weight: 300;
  
}
.first_author_box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 10px 20px;
  text-align: center;

}
.first_author_box > text {
  font-size: 12px;
  color: #999;
  font-weight: 100;
}

